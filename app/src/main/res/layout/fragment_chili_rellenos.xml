<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChiliRellenos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pagetemplate">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingLeft="15dp">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/imgCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:src="@drawable/chilirellenos"/>

        <TextView
            android:id="@+id/textviewCR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="72dp"
            android:fontFamily="@font/belgrano"
            android:text="Chili Rellenos"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/byline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/belgrano"
            android:text="by Clarissa"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recdesc"
            android:layout_width="373dp"
            android:layout_height="56dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/belgrano"
            android:text="The Chilli Rellenos Casserole is very easy to prepare and is loaded with flavour. Great for a busy week night, and good enough for company"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ingr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/belgrano"
            android:text="Ingredients (for 6 servings):"
            android:textColor="#EFAFAF"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/ingr1"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="240dp"
            android:buttonTint="#fff"
            android:text="2 (7 ounce) cans whole green chile peppers, drained"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/ingr2"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:buttonTint="#fff"
            android:text="8 ounces Monterey Jack cheese, shredded"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/ingr3"
            android:layout_width="274dp"
            android:layout_height="44dp"
            android:layout_marginTop="310dp"
            android:buttonTint="#fff"
            android:text="8 ounces Longhorn or Cheddar cheese, shredded"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/ingr4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:buttonTint="#fff"
            android:text="2 eggs, beaten"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/ingr5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:buttonTint="#fff"
            android:text="1 (5 ounce) can evaporated milk"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/ingr7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:buttonTint="#fff"
            android:text="2 tablespoons all-purpose flour"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/ingr8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="440dp"
            android:buttonTint="#fff"
            android:text="Â½ cup milk"
            android:textColor="#fff"/>

        <CheckBox
            android:id="@+id/ingr9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="470dp"
            android:buttonTint="#fff"
            android:text="1 (8 ounce) can tomato sauce"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:fontFamily="@font/belgrano"
            android:text="Directions:"
            android:textColor="#EFAFAF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="520dp"
            android:fontFamily="@font/belgrano"
            android:text="Step 1:"
            android:textColor="#EFAFAF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/step1"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="540dp"
            android:fontFamily="@font/belgrano"
            android:text="Preheat oven to 350 degrees F (175 degrees C). Spray a 9x13-inch baking dish with cooking spray."
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="580dp"
            android:fontFamily="@font/belgrano"
            android:text="Step 2:"
            android:textColor="#EFAFAF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/step2"
            android:layout_width="377dp"
            android:layout_height="90dp"
            android:layout_marginTop="600dp"
            android:fontFamily="@font/belgrano"
            android:text="Lay half of the chilies evenly in bottom of baking dish. Sprinkle with half of the Jack and Cheddar cheeses, and cover with remaining chilies. In a bowl, mix together the eggs, milk, and flour, and pour over the top of the chilies."
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="695dp"
            android:fontFamily="@font/belgrano"
            android:text="Step 3:"
            android:textColor="#EFAFAF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/step3"
            android:layout_width="380dp"
            android:layout_height="94dp"
            android:layout_marginTop="715dp"
            android:fontFamily="@font/belgrano"
            android:text="Bake in the preheated oven for 25 minutes. Remove from oven, pour tomato sauce evenly over the top, and continue baking another 15 minutes. Sprinkle with remaining Jack and Cheddar cheeses, and serve."
            android:textColor="#fff"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nutrinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="810dp"
            android:fontFamily="@font/belgrano"
            android:text="Nutrition Facts (per serving):"
            android:textColor="#EFAFAF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/NInfo"
            android:layout_width="376dp"
            android:layout_height="65dp"
            android:layout_marginTop="830dp"
            android:fontFamily="@font/belgrano"
            android:text="387 calories; protein 23.9g 48% DV; carbohydrates 12g 4% DV; fat 27.6g 42% DV; cholesterol 139.9mg 47% DV; sodium 1449.4mg 58% DV. Full Nutrition"
            android:textColor="#fff"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnshare"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="230dp"
            android:text="SHARE"
            android:onClick="onclickshare"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="270dp"
            android:text="SAVE"
            android:onClick="onclicksave"
            tools:ignore="OnClick"/>

        <Button
            android:id="@+id/btndwnld"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="350dp"
            android:onClick="onclickdwnld"
            android:text="DOWNLOAD"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btnprint"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="310dp"
            android:text="PRINT"
            android:onClick="onclickprint"
            tools:ignore="OnClick"/>


    </FrameLayout>


</ScrollView>
